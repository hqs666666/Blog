<style>
    #consent {
        width: 100%;
        background: #f0f2f5 url(/images/background.svg) no-repeat 50%;
        position: fixed;
        top: 60px;
        bottom: 0;
        padding: 110px 0 144px;
    }

    .box {
        width: 50%;
        margin: auto;
    }

    .title {
        font-size: 24px;
        overflow: hidden;
        height: 80px;
        line-height: 80px;
        padding: 0 30px;
    }

    .client-logo {
        float: left;
        margin: 10px;
    }

    .from {
        padding: 20px;
    }

    .list-group-item {
        list-style: none;
        cursor: pointer;
    }

    .summary {
        margin: 10px 0 0 0;
        font-size: 14px;
    }

    .consent-description {
        font-size: 14px;
    }

    .btn {
        display: inline-block;
        line-height: 1;
        white-space: nowrap;
        cursor: pointer;
        background: #fff;
        border: 1px solid #dcdfe6;
        color: #606266;
        -webkit-appearance: none;
        text-align: center;
        box-sizing: border-box;
        outline: none;
        margin: 0;
        transition: .1s;
        font-weight: 500;
        -moz-user-select: none;
        -webkit-user-select: none;
        -ms-user-select: none;
        padding: 12px 20px;
        font-size: 14px;
        border-radius: 4px;
    }

    .btn-primary:focus, .btn-primary:hover {
        background: #66b1ff;
        border-color: #66b1ff;
        color: #fff;
    }

    .btn-primary {
        color: #fff;
        background-color: #409eff;
        border-color: #409eff;
    }

    .btn-cancel {
        background-color: #a6a9ad;
    }

    .consent-buttons {
        margin: 20px 0 0 0;
    }

    .btn-default {
        margin-left: 20%;
    }

        .btn-default:hover {
            color: #606266;
        }
</style>

<div id="consent">
    <div class="box">
        <div class="title">
            @if (Model.ClientLogoUrl != null)
            {
                <div class="client-logo"><img src="~/images/iron_man.png" width="60"></div>
            }
            @Model.ClientName<small>正在请求访问</small>
        </div>
        <div class="from">
            <partial name="_ValidationSummary" />
            <form asp-action="Index" class="consent-form">
                @if (Model.IdentityScopes.Any())
                {
                    <input type="hidden" asp-for="ReturnUrl" />
                    <div class="summary">您将授予以下权限</div>

                    <div class="panel panel-default consent-buttons">
                        <div class="summary">
                            <i class="el-icon-user"></i>
                            个人资料
                        </div>
                        <ul class="list-group">
                            @foreach (var scope in Model.IdentityScopes)
                            {
                                <partial name="_ScopeListItem" model="@scope" />
                            }
                        </ul>
                    </div>
                }

                @if (Model.ResourceScopes.Any())
                {
                    <div class="panel panel-default">
                        <div class="summary">
                            <i class="el-icon-orange"></i>
                            应用访问
                        </div>
                        <ul class="list-group">
                            @foreach (var scope in Model.ResourceScopes)
                            {
                                <partial name="_ScopeListItem" model="scope" />
                            }
                        </ul>
                    </div>
                }

                @if (Model.AllowRememberConsent)
                {
                    <div class="consent-remember">
                        <label>
                            <input class="consent-scopecheck" asp-for="RememberConsent" />
                            <strong>记住本次操作</strong>
                        </label>
                    </div>
                }

                <div class="consent-buttons">
                    <button name="button" value="yes" class="btn btn-primary" autofocus>允许</button>
                    <button name="button" value="no" class="btn btn-cancel">拒绝</button>
                    @if (Model.ClientUrl != null)
                    {
                        <a class="btn btn-default" target="_blank" href="@Model.ClientUrl">
                            <i class="el-icon-position"></i>
                            <strong>@Model.ClientName</strong>
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>
</div>
